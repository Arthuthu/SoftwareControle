@inherits LayoutComponentBase

@inject ISessaoUsuario sessao

<navbar>
    <a class="logo">
        Software Controle
    </a>
    <a class="nav-link" href="/ferramenta/criar">Adicionar ferramenta</a>
    <div class="nav-links">
        <AuthorizeView>
            <Authorized>
                <a class="nav-link">
                    @context.User.FindFirst(ClaimTypes.Name)?.Value
                </a>
                <a class="nav-link" href="/logout">
                    <span>Sair</span>
                </a>
            </Authorized>
            <NotAuthorized>
                <a class="nav-link" href="/login">
                    <span>Entrar</span>
                </a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</navbar>
<div>
    <main>
        <article>
            @Body
        </article>
    </main>
</div>

